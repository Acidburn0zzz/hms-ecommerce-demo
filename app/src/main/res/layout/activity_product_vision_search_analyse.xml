<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/product_vision_bgd"
    android:orientation="vertical"
    tools:context=".page.ProductVisionSearchAnalyseActivity">

    <include
        android:id="@+id/title_order_center"
        layout="@layout/title_page" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_search_result"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="2dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="2dp"
        android:overScrollMode="never" />

    <TextView
        android:id="@+id/no_search_result"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/product_no_result"
        android:textSize="20dp"
        android:visibility="gone" />

</LinearLayout>