<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/my_account_bgd"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_head"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:src="@mipmap/head_load" />

    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="8dp"
        android:gravity="center"
        android:padding="2dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/account_item_function"
        android:orientation="horizontal">

        <include
            android:id="@+id/lv_address"
            layout="@layout/circle_item_my_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <include
            android:id="@+id/lv_reward"
            layout="@layout/circle_item_my_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"></include>

        <include
            android:id="@+id/lv_member"
            layout="@layout/circle_item_my_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"></include>
    </LinearLayout>

    <TextView
        android:id="@+id/account_vip_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:padding="10dp"
        android:text="@string/sparkle_store_vip_service"
        android:textColor="@color/account_item"
        android:textSize="16sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/lv_vip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <include
            android:id="@+id/lv_vip_week"
            layout="@layout/account_vip_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

        </include>

        <include
            android:id="@+id/lv_vip_month"
            layout="@layout/account_vip_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"></include>

        <include
            android:id="@+id/lv_vip_year"
            layout="@layout/account_vip_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"></include>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_vip_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp"
        android:text="@string/get_vip_service_with"
        android:textColor="@color/account_item"
        android:textSize="16sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <include
            android:id="@+id/lv_offer_1"
            layout="@layout/circle_item_my_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <include
            android:id="@+id/lv_offer_2"
            layout="@layout/circle_item_my_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"></include>

        <include
            android:id="@+id/lv_offer_3"
            layout="@layout/circle_item_my_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"></include>
    </LinearLayout>
</LinearLayout>
