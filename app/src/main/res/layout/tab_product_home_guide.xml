<RelativeLayout android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <View
        android:layout_alignParentTop="true"
        android:background="@color/color_light_gray"
        android:layout_width="match_parent"
        android:layout_height="1dp">
    </View>
    <LinearLayout
        android:id="@+id/layout_evaluate"
        android:padding="6dp"
        android:layout_marginStart="10dp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_alignParentStart="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:maxWidth="32dp"
            android:maxHeight="32dp"
            android:minWidth="30dp"
            android:minHeight="30dp"
            android:src="@mipmap/icon_comment"
            android:adjustViewBounds="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </ImageView>
        <TextView
            android:textSize="12sp"
            android:layout_gravity="center"
            android:text="@string/customer_evaluation"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
    </LinearLayout>
    <LinearLayout
            android:id="@+id/layout_shopping_cart"
            android:padding="6dp"
            android:layout_toEndOf="@+id/layout_evaluate"
            android:layout_marginStart="10dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <ImageView
            android:maxWidth="32dp"
            android:maxHeight="32dp"
            android:minWidth="30dp"
            android:minHeight="30dp"
            android:adjustViewBounds="true"
            android:src="@mipmap/shop_car"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </ImageView>
        <TextView
                android:textSize="12sp"
                android:layout_gravity="center"
                android:text="@string/shopping_cart_title"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_toEndOf="@+id/layout_shopping_cart"
        android:orientation="horizontal"
        android:layout_marginEnd="10dp"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_weight="5"
            android:layout_width="match_parent"
            android:layout_height="2dp">
        </View>
        <TextView
            android:id="@+id/add_shop_car"
            android:layout_width="match_parent"
            android:textColor="@color/white"
            android:text="@string/add_shop_car"
            android:layout_gravity="center_vertical"
            android:paddingTop="6dp"
            android:gravity="center"
            android:paddingBottom="6dp"
            android:textSize="14sp"
            android:layout_weight="3"
            android:background="@drawable/half_corner_text_type_1"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:id="@+id/buy_now"
            android:layout_width="match_parent"
            android:textColor="@color/white"
            android:text="@string/buy_now"
            android:gravity="center"
            android:paddingTop="6dp"
            android:layout_gravity="center_vertical"
            android:paddingBottom="6dp"
            android:textSize="14sp"
            android:layout_weight="3"
            android:background="@drawable/half_corner_text_type_2"
            android:layout_height="wrap_content">
        </TextView>
    </LinearLayout>

</RelativeLayout>