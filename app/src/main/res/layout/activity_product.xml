<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".page.ProductActivity">
    <ScrollView
        android:layout_weight="1"
        android:scrollbars="none"
        android:overScrollMode="never"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/view_pager_product"
                    android:layout_width="match_parent"
                    android:layout_height="360dp"
                    android:minHeight="110dp"
                    android:overScrollMode="never"></androidx.viewpager.widget.ViewPager>

                <TextView
                    android:id="@+id/tv_tip"
                    android:background="@drawable/select_position_bgd"
                    android:text="@string/current_position"
                    android:layout_margin="8dp"
                    android:textSize="12sp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:layout_gravity="bottom|end"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>
            </FrameLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/text_price"
                    android:text="@string/product_price"
                    android:padding="6dp"
                    android:textColor="@color/red"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                </TextView>

                <ProgressBar
                    android:id="@+id/pb_3d"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:maxWidth="40dp"
                    android:maxHeight="40dp"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
                    android:layout_marginEnd="6dp"
                    android:layout_gravity="center_vertical"
                    android:visibility="gone"
                    android:indeterminateDrawable="@drawable/progress_bar_loading" />

                <ImageView
                    android:id="@+id/iv_3d"
                    android:src="@mipmap/icon_3d"
                    android:padding="4dp"
                    android:textSize="16sp"
                    android:layout_gravity="center_vertical"
                    android:maxWidth="40dp"
                    android:maxHeight="40dp"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
                    android:layout_marginEnd="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >
                </ImageView>
                <ImageView
                    android:id="@+id/iv_ar"
                    android:src="@mipmap/icon_ar"
                    android:padding="4dp"
                    android:layout_gravity="center_vertical"
                    android:maxWidth="40dp"
                    android:maxHeight="40dp"
                    android:scaleType="fitXY"
                    android:layout_marginEnd="6dp"
                    android:adjustViewBounds="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </ImageView>
            </LinearLayout>
            <TextView
                android:id="@+id/text_name"
                android:padding="6dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </TextView>
            <LinearLayout
                android:layout_marginTop="6dp"
                android:padding="6dp"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="@string/product_color"
                    android:padding="8dp"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>
                <TextView
                    android:id="@+id/text_color"
                    android:text="@string/product_color"
                    android:padding="8dp"
                    android:textColor="@color/red"
                    android:background="@drawable/corner_text_type"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="6dp"
                android:background="@color/white"
                android:padding="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="@string/product_version"
                    android:padding="8dp"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>
                <TextView
                    android:id="@+id/text_version"
                    android:text="@string/product_version"
                    android:padding="8dp"
                    android:textColor="@color/red"
                    android:background="@drawable/corner_text_type"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="6dp"
                android:background="@color/white"
                android:padding="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="@string/product_capacity"
                    android:padding="8dp"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>
                <TextView
                    android:id="@+id/text_capacity"
                    android:text="@string/product_capacity"
                    android:padding="8dp"
                    android:textColor="@color/red"
                    android:background="@drawable/corner_text_type"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="6dp"
                android:padding="6dp"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="@string/product_count"
                    android:padding="8dp"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>
                <TextView
                    android:layout_marginStart="10dp"
                    android:id="@+id/btn_delete"
                    android:text="-"
                    android:padding="6dp"
                    android:textColor="@color/black"
                    android:background="@drawable/circle_add_delete_type"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:layout_width="30dp"
                    android:layout_height="30dp">
                </TextView>
                <TextView
                    android:id="@+id/text_count"
                    android:text="1"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:padding="4dp"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content">
                </TextView>
                <TextView
                    android:id="@+id/btn_add"
                    android:text="+"
                    android:padding="6dp"
                    android:textColor="@color/black"
                    android:background="@drawable/circle_add_delete_type"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:layout_width="30dp"
                    android:layout_height="30dp">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="6dp"
                android:padding="6dp"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="@string/product_send"
                    android:padding="8dp"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>
                <TextView
                    android:id="@+id/text_send"
                    android:text="@string/product_address"
                    android:padding="8dp"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>
    <FrameLayout
        android:id="@+id/fl_img_super"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_gravity="center"
        android:visibility="gone"
        />
    <include layout="@layout/tab_product_home_guide">
    </include>
</LinearLayout>